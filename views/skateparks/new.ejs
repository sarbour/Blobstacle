<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Skatepark</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/skateparks" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="skatepark[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="skatepark[location]" required>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image(s)</label>
                    <input class="form-control" type="file" id="image" multiple required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Skatepark Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="skatepark[price]" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="skatepark[description]"
                        required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Skatepark</button>
                </div>
            </form>
            <a href="/skateparks">All Skateparks</a>
        </div>
    </div>