<% layout('layouts/boilerplate') %>
<!-- <div id="cluster-map"></div> -->
<h1>All Skateparks</h1>
<div>
    <a href="/skateparks/new">Add Skatepark</a>
</div>
<% for (let skatepark of skateparks) { %> 
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(skatepark.images.length) { %> 
                    <img class="img-fluid" alt="" src="<%= skatepark.images[0].url %>" crossorigin>
                <% } else { %>
                    <!-- *** display default image *** --> 
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= skatepark.title %></h5>
                    <p class="card-text"><%= skatepark.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= skatepark.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/skateparks/<%= skatepark._id %>">View <%= skatepark.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const skateparks = {features: <%- JSON.stringify(skateparks) %>};
</script>

<script src="/javascripts/clusterMap.js"></script>